#!/bin/bash

# fail fast on errors
set -e

# normalise to fill path
work_dir=$(cd $(dirname $0)/.. ; pwd)
app_dir=${1:=/app}

[[ ${work_dir} != ${app_dir} ]] && PLATFORM="drie" || PLATFORM="heroku"
export PLATFORM
echo "platform detected as ${PLATFORM}"

shopt -s nullglob
for hook in ${work_dir}/hooks/*.hook ; do
  echo "running $(basename $hook)"
  source ${work_dir}/hooks/${hook} ${work_dir} ${app_dir}
done
